# =============================================================================
# Gesco - Template des variables d'environnement
# =============================================================================
# Copier vers .env et renseigner les valeurs. Ne jamais commiter .env.

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=Gesco
APP_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=9111
API_V1_PREFIX=/api/v1
TIMEZONE=Africa/Douala
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Base de données
# -----------------------------------------------------------------------------
# Option 1 - PostgreSQL (production / serveur démarré)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/gesco
# DATABASE_URL_SYNC=postgresql+psycopg2://user:password@localhost:5432/gesco
#
# Option 2 - SQLite (développement local sans PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./app/db/gesco.db
DATABASE_URL_SYNC=sqlite:///./app/db/gesco.db
#
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# -----------------------------------------------------------------------------
# Sécurité & JWT
# -----------------------------------------------------------------------------
SECRET_KEY=changez-moi-en-production-32-caracteres-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12
RATE_LIMIT_PER_MINUTE=60

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# Locale & devise (Cameroun)
# -----------------------------------------------------------------------------
DEFAULT_LOCALE=fr_FR
DEFAULT_CURRENCY_CODE=XAF
DATE_FORMAT=%d/%m/%Y
DATETIME_FORMAT=%d/%m/%Y %H:%M

# -----------------------------------------------------------------------------
# Fichiers & upload
# -----------------------------------------------------------------------------
MEDIA_ROOT=./media
MAX_UPLOAD_SIZE=10485760

# -----------------------------------------------------------------------------
# Cache & reprise de session (optionnel / prévu pour évolution)
# -----------------------------------------------------------------------------
REDIS_URL=
CACHE_SESSION_TTL_MINUTES=1440
ENABLE_SESSION_RECOVERY=true

# -----------------------------------------------------------------------------
# Synchronisation (optionnel / prévu pour évolution)
# -----------------------------------------------------------------------------
SYNC_BATCH_SIZE=100
SYNC_OFFLINE_THRESHOLD_SECONDS=300

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# -----------------------------------------------------------------------------
# Notifications SMTP (optionnel / non utilisé par défaut)
# -----------------------------------------------------------------------------
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@gesco.local
# SMTP_TLS=true

# -----------------------------------------------------------------------------
# Monitoring Sentry (optionnel / non utilisé par défaut)
# -----------------------------------------------------------------------------
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=0.1

# -----------------------------------------------------------------------------
# Premier démarrage (optionnel / non utilisé par défaut)
# -----------------------------------------------------------------------------
